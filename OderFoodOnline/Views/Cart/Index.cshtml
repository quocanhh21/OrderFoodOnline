@model List<OderFoodOnline.Models.CartItem>
    
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@section slide{
    <section class="page-info new-block">
        <div class="fixed-bg" style="background: url('images/info-bg.jpg');"></div>
        <div class="overlay"></div>
        <div class="container">
            <h2>Domnoo menu</h2>
            <div class="clear-fix"></div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active"><a href="#">Menu</a></li>
            </ol>
        </div>
    </section>

}
@section jsFooter{

    <script src="~/Assets/Client/js/controller/cartController.js"></script>
}


<section class="shopping-cart new-block">
    <div class="container">
        @if (Model.Count > 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table cart-tbl">
                            <thead>
                                <tr>


                                    <th class="p_dtl">Product Details</th>
                                    <th class="p_btn"></th>
                                    <th class="p_price">Price</th>
                                    <th class="p_quantity">Quantity</th>
                                    <th class="p_ttl">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td class="p_dtl">
                                            <div class="block-stl9">
                                                <div class="img-holder">
                                                    <img src="@item.Product.Image" alt="" class="img-responsive">
                                                </div>
                                                <div class="info-block">
                                                    <h5>@item.Product.Name</h5>
                                                    <p class="txt-cat">Regular</p>
                                                    <p class="ab-txt-block">@item.Product.Description</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p_btn">

                                            <a href="#" data-id="@item.Product.ID" id="btn-delete" class="btn1 stl3">Remove</a>
                                        </td>
                                        <td class="p_price">
                                            $ @item.Product.Price.GetValueOrDefault(0)
                                        </td>
                                        <td class="p_quantity">
                                            <div class="">
                                                <input type="number" min="1" max="20" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity">
                                            </div>


                                        </td>
                                        <td class="p_ttl">
                                            $ @(@item.Product.Price.GetValueOrDefault(0) * item.Quantity)
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <button id="btnContinue" class="btn1 stl3">Continue</button>
                        <button id="btnUpdate" class="btn1 stl3">Update</button>
                        <button id="btnDeleteAll" class="btn1 stl3">Delete All</button>
                       
                    </div>

                </div>

               
                <div class="col-md-12">
                    <div class="block-stl10 odr-summary">

                    </div>
                    <button  id="btnPayment" class="btn btn1 stl2 ">Check out</button>
                </div>

            </div>

        }
        else
        {
            <span class="alert alert-danger">There are no products in cart</span>

        }
    </div>
    <div class="clearfix"></div>
</section>


